<h3>Edition du marchand : <%= @merchant.name %></h3>

<div class="row">
   <div class="col-sm-12">
      <!-- START panel-->
      <div class="panel panel-default">
         <div class="panel-body">
            <%= form_for @merchant, url: {action: "update"} do |f| %>
              <% if @merchant.errors.any? %>
              <ul>
                <% @merchant.errors.full_messages.each do |msg| %>
                  <li><%= msg %></li>
                <% end %>
              </ul>
              <% end %>
              <div class="form-group">
                <%= f.label :name %>
                <%= f.text_field :name, class: 'form-control', placeholder: "nom de la société" %>
              </div>
              <div class="form-group">
                <%= f.label :description %>
                <%= f.text_area :description, class: 'form-control' %>
              </div>
              <div class="form-group">
                <%= f.label :logo %>
                <%= image_tag @merchant.logo.url, class: 'media-object img-responsive' %>
                <%= f.file_field :logo, class: 'form-control' %>
              </div>
              <%= link_to "Retour", admin_merchants_path, class: 'btn mb-sm btn-danger' %>
              <%= f.submit "Enregistrer", class: "btn mb-sm btn-default" %>
            <% end %>
         </div>
      </div>
      <!-- END panel-->
   </div>
</div>