<!-- START Sidebar (left)-->
<div class="aside-inner">
  <nav class="sidebar" data-sidebar-anyclick-close="">
    <!-- START sidebar nav-->
    <ul class="nav">
      <!-- START user info-->
      <li class="has-user-block">
        <div id="user-block" class="collapse">
          <div class="item user-block">
            <!-- User picture-->
            <div class="user-block-picture">
              <div class="user-block-status">
                <img src="<%= image_path('angle/user/02.jpg') %>" alt="Avatar" width="60" height="60" class="img-thumbnail img-circle" />
                <div class="circle circle-success circle-lg"></div>
              </div>
            </div>
            <!-- Name and Job-->
            <div class="user-block-info">
              <span class="user-block-name"><%= current_user.email %></span>
              <span class="user-block-role"><%= current_user.role_name %></span>
            </div>
          </div>
        </div>
      </li>
      <!-- END user info-->
      <!-- Iterates over all sidebar items-->
      <li class="nav-heading">
        <span>Navigation Principale</span>
      </li>
      <li class="<%= 'active' if controller.controller_name == 'dashboard' %>">
        <%= link_to admin_path do %>
          <em class="icon-speedometer"></em>
          <span data-localize="sidebar.nav.WIDGETS">Dashboard</span>
        <% end %>
      </li>
      <li class="<%= 'active' if controller.controller_name == 'products' %>">
        <%= link_to admin_products_path do %>
          <em class="fa fa-cube"></em>
          <span data-localize="sidebar.nav.WIDGETS">Produits</span>
        <% end %>
      </li>
      <li class="<%= 'active' if controller.controller_name == 'orders' %>">
        <%= link_to admin_orders_path do %>
          <div class="label label-success pull-right"><%= @number_orders %></div>
          <em class="icon-basket-loaded"></em>
          <span data-localize="sidebar.nav.WIDGETS">Commandes</span>
        <% end %>
      </li>
      <li class="<%= 'active' if controller.controller_name == 'inventories' %>">
        <%= link_to admin_inventories_path do %>
          <em class="fa fa-cubes"></em>
          <span data-localize="sidebar.nav.DOCUMENTATION">Inventaires</span>
        <% end %>
      </li>
      <li class="<%= 'active' if controller.controller_name == 'tutorials' %>">
        <%= link_to admin_tutorials_path do %>
          <em class="icon-book-open"></em>
          <span data-localize="sidebar.nav.WIDGETS">Tutoriels</span>
        <% end %>
      </li>
      <% if can? :index, User %>
        <li class="nav-heading">
          <span>Administration</span>
        </li>
        <li class="<%= 'active' if controller.controller_name == 'users' %>">
          <%= link_to admin_users_path do %>
            <em class="icon-user"></em>
            <span data-localize="sidebar.nav.WIDGETS">Utilisateurs</span>
          <% end %>
        </li>
        <li class="<%= 'active' if controller.controller_name == 'merchants' %>">
          <%= link_to admin_merchants_path do %>
            <em class="fa fa-truck"></em>
            <span data-localize="sidebar.nav.WIDGETS">Marchands</span>
          <% end %>
        </li>
        <li class="nav-heading">
          <span>Autre</span>
        </li>
        <li class="<%= 'active' if controller.controller_name == 'pages' %>">
          <%= link_to admin_path do %>
            <em class="icon-doc"></em>
            <span data-localize="sidebar.nav.WIDGETS">Pages</span>
          <% end %>
        </li>
        <li class="<%= 'active' if controller.controller_name == 'blog' %>">
          <%= link_to admin_path do %>
            <em class="icon-notebook"></em>
            <span data-localize="sidebar.nav.WIDGETS">Blog</span>
          <% end %>
        </li>
        <li class="<%= 'active' if controller.controller_name == 'documentation' %>">
          <%= link_to admin_path do %>
            <em class="icon-graduation"></em>
            <span data-localize="sidebar.nav.WIDGETS">Documentation</span>
          <% end %>
        </li>
      <% end %>
    </ul>
    <!-- END sidebar nav-->
  </nav>
</div>
<!-- END Sidebar (left)-->