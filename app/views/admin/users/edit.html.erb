<h3>Edition de l'utilisateur : <%= @user.email %></h3>

<div class="row">
   <div class="col-sm-12">
      <!-- START panel-->
      <div class="panel panel-default">
         <div class="panel-body">
            <%= form_for @user, url: {action: "update"} do |f| %>
              <% if @user.errors.any? %>
              <ul>
                <% @user.errors.full_messages.each do |msg| %>
                  <li><%= msg %></li>
                <% end %>
              </ul>
              <% end %>
              <div class="form-group">
                <%= f.label :email %>
                <%= f.email_field :email, class: 'form-control', placeholder: "exemple@exemple.fr" %>
              </div>
              <div class="form-group">
                <%= f.label :password %>
                <%= f.password_field :password, class: 'form-control' %>
              </div>
              <div class="form-group">
                <%= f.label :password_confirmation %>
                <%= f.password_field :password_confirmation, class: 'form-control' %>
              </div>
              <div class="form-group">
                <%= f.label :role, class: 'col-sm-2 control-label' %>
                <div class="col-sm-10">
                  <%= f.select :role, [['Client', 'Customer'], ['Marchand', 'Merchant'], ['Administrateur', 'Admin']], {}, { :class => "form-control m-b" } %>
                  <br>
                </div>
              </div>
              <%= link_to "Retour", admin_users_path, class: 'btn mb-sm btn-danger' %>
              <%= f.submit "Enregistrer", class: "btn mb-sm btn-default" %>
            <% end %>
         </div>
      </div>
      <!-- END panel-->
   </div>
</div>