<div class="container-fluid page-search">
  <div class="row">
    <div class="col-md-23 col-md-offset-1 ">
      <%= form_for search_path, :html => {:class => 'search-bar'}, method: :get do |f| %>
        <%= text_field_tag :search, params[:search], :class => 'search-field', placeholder: 'Recherche' %>
        <%= button_tag(type: 'submit', class: "btn btn-default search-button") do %>
          <i class="fa fa-search" aria-hidden="true"></i>
        <% end %>
      <% end %>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-24 col-md-23 col-md-offset-1">
      <% @products.each do |product| %>
        <div class="col-md-6 col-xs-24">
          <%= render "categories/product_row", product: product, order_item: @order_item %>
        </div>
      <% end %>
    </div>
  </div>
</div>