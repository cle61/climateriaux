<h3>Edition du tutoriel : <%= @tutorial.title %></h3>

<!-- START panel-->
<div class="panel panel-default">
  <div class="panel-body">
    <%= form_for @tutorial, url: {action: "update"} do |f| %>
      <% if @tutorial.errors.any? %>
        <ul>
          <% @tutorial.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      <% end %>
      <fieldset>
        <div class="form-group">
          <%= f.label :title, class: 'col-sm-2 control-label' %>
          <div class="col-sm-10">
            <%= f.text_field :title, class: 'form-control', placeholder: "Titre du tutoriel" %>
          </div>
        </div>
      </fieldset>
      <fieldset>
        <div class="form-group">
          <%= f.label :resume, class: 'col-sm-2 control-label' %>
          <div class="col-sm-10">
            <%= f.text_area :resume, class: 'form-control note-editor note-editor-margin', placeholder: "Court résumé du tutoriel" %>
          </div>
        </div>
      </fieldset>
      <fieldset>
        <div class="form-group">
          <%= f.label :content, class: 'col-sm-2 control-label' %>
          <div class="col-sm-10">
            <%= f.text_area :content, class: 'form-control', rows: 10 %>
          </div>
        </div>
      </fieldset>
      <fieldset>
        <div class="form-group">
          <div class="col-sm-4 col-sm-offset-2">
            <%= link_to "Retour", admin_tutorials_path, class: 'btn mb-sm btn-default' %>
            <%= f.submit "Enregistrer", class: "btn mb-sm btn-primary" %>
          </div>
        </div>
      </fieldset>
    <% end %>
  </div>
</div>
<!-- END panel-->