<% if !@order_item.nil? && @order_item.errors.any? %>
  <div class="alert alert-danger">
    <ul>
    <% @order_item.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>
<% if @order_items.size == 0 %>
  <p class="text-center">
    Il n'y a aucun produit dans votre panier. <%= link_to 'Retour sur la home', root_path %>
  </p>
<% else %>
  <div class="row">
    <div class="col-md-16 col-md-offset-1">
      <div class="cart-process">
        <div class="row">
          <div class="col-md-8">
            <span class="cart-process-numbers">1</span>
            <h3>Mes achats</h3>
          </div>
          <div class="col-md-8">
            <span class="cart-process-numbers">2</span>
            <h3>Livraison</h3>
          </div>
          <div class="col-md-8">
            <span class="cart-process-numbers">3</span>
            <h3>Paiement</h3>
          </div>
        </div>
      </div>
      <div class="well">
        <div class="row">
          <div class="col-xs-3 display-table">
            <span>Produit</span>
          </div>
          <div class="col-xs-8 display-table">
            <span>Description</span>
          </div>
          <div class="col-xs-13 display-table">
            <div class="row">
              <div class="col-xs-8">
                <span>Qté</span>
              </div>
              <div class="col-xs-8">
                <span>Montant</span>
              </div>
              <div class="col-xs-8">
                <span>Supprimer</span>
              </div>
            </div>
          </div>
        </div>
        <% @order_items.each do |order_item| %>
          <%= render 'carts/cart_row', product: order_item.product, order_item: order_item, show_total: true %>
        <% end %>
      </div>
    </div>
    <div class="col-md-5 col-md-offset-1">
      <div class="sidebar-cart">
        <h3>Récapitulatif</h3>
        <div class="sidebar-item">
          <span>Nombre d’articles</span>
          <span class="pull-right"><%= @order_items.count %></span>
        </div>
        <div class="sidebar-item">
          <span>Livraison</span>
          <span class="pull-right">10,50 €</span>
        </div>
        <div class="sidebar-item total-item">
          <span>Total</span>
          <span class="pull-right"><%= @total%> €</span>
        </div>
      </div>
    </div>
  </div>
<% end %>