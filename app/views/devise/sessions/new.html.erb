<section class="login">
  <div class="container">
    <div class="form-content">
      <h2>Log in</h2>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field">
          <%= f.email_field :email, autofocus: true, placeholder: 'email' %>
        </div>

        <div class="field">
          <%= f.password_field :password, placeholder: 'Mot de passe', autocomplete: "off" %>
        </div>

        <% if devise_mapping.rememberable? -%>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end -%>

        <div class="actions">
          <%= f.submit "Log in" %>
        </div>
      <% end %>
      <div class="register-link">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</section>
